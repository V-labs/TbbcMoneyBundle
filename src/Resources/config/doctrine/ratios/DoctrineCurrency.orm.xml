<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Tbbc\MoneyBundle\Entity\DoctrineCurrency" table="tbbc_money_currency" repository-class="Tbbc\MoneyBundle\Repository\DoctrineCurrencyRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="currencyCode" type="string" column="currency_code" nullable="false"/>
        <field name="reference" type="boolean" column="reference">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="provider" type="string" column="provider" nullable="false"/>
    </entity>
</doctrine-mapping>
